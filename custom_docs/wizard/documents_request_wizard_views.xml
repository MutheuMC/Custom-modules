<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="documents_request_wizard_view_form" model="ir.ui.view">
        <field name="name">documents.request.wizard.form</field>
        <field name="model">documents.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Request Document">
                <group>
                    <field name="name" placeholder="Document name..."/>
                    <field name="partner_id" placeholder="Request from..."/>
                    <field name="folder_id"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="deadline"/>
                    <field name="message" placeholder="Add a message..."/>
                </group>
                <footer>
                    <button name="action_request_document" type="object" 
                            string="Request" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_documents_request_wizard" model="ir.actions.act_window">
        <field name="name">Request Document</field>
        <field name="res_model">documents.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
