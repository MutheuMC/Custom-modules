<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Folders -->
        <record id="folder_root" model="documents.folder">
            <field name="name">Documents</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="folder_finance" model="documents.folder">
            <field name="name">Finance</field>
            <field name="parent_folder_id" ref="folder_root"/>
            <field name="sequence">10</field>
            <field name="icon">fa-dollar</field>
        </record>
        
        <record id="folder_hr" model="documents.folder">
            <field name="name">Human Resources</field>
            <field name="parent_folder_id" ref="folder_root"/>
            <field name="sequence">20</field>
            <field name="icon">fa-users</field>
        </record>
        
        <record id="folder_management" model="documents.folder">
            <field name="name">Management</field>
            <field name="parent_folder_id" ref="folder_root"/>
            <field name="sequence">30</field>
            <field name="icon">fa-briefcase</field>
        </record>
        
        <!-- Default Tag Categories -->
        <record id="facet_status" model="documents.facet">
            <field name="name">Status</field>
            <field name="sequence">10</field>
            <field name="folder_id" ref="folder_root"/>
        </record>
        
        <record id="facet_type" model="documents.facet">
            <field name="name">Type</field>
            <field name="sequence">20</field>
            <field name="folder_id" ref="folder_root"/>
        </record>
        
        <!-- Default Tags -->
        <record id="tag_draft" model="documents.tag">
            <field name="name">Draft</field>
            <field name="facet_id" ref="facet_status"/>
            <field name="sequence">10</field>
            <field name="color">1</field>
        </record>
        
        <record id="tag_approved" model="documents.tag">
            <field name="name">Approved</field>
            <field name="facet_id" ref="facet_status"/>
            <field name="sequence">20</field>
            <field name="color">10</field>
        </record>
        
        <record id="tag_contract" model="documents.tag">
            <field name="name">Contract</field>
            <field name="facet_id" ref="facet_type"/>
            <field name="sequence">10</field>
            <field name="color">4</field>
        </record>
        
        <record id="tag_invoice" model="documents.tag">
            <field name="name">Invoice</field>
            <field name="facet_id" ref="facet_type"/>
            <field name="sequence">20</field>
            <field name="color">5</field>
        </record>
    </data>
</odoo>