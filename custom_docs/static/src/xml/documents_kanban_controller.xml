<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="custom_docs.DocumentsKanbanView.ControlPanel" t-inherit="web.KanbanView.ControlPanel" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_control_panel_main_buttons')]" position="inside">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-primary" t-on-click="env.documentsController?.onUploadDocuments">
                    <i class="fa fa-upload me-1"/>
                    Upload
                </button>
                <div class="btn-group">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-plus me-1"/>
                        New
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#" t-on-click.prevent="env.documentsController?.onAddUrl">
                                <i class="fa fa-link me-2"/>
                                Add URL
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" t-on-click.prevent="env.documentsController?.onRequestDocument">
                                <i class="fa fa-clock-o me-2"/>
                                Request Document
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </xpath>
    </t>
</templates>