<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="DocumentsKanbanView.buttons">
        <div class="btn-group">
            <button type="button" class="btn btn-primary o_documents_upload">
                <i class="fa fa-upload"/> Upload
            </button>
            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" 
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item o_documents_request" href="#">
                    <i class="fa fa-clock-o"/> Request
                </a>
                <a class="dropdown-item o_documents_url" href="#">
                    <i class="fa fa-link"/> Add URL
                </a>
            </div>
        </div>
    </t>
</templates>