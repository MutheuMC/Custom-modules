<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tag Form View (only tag fields) -->
  <record id="documents_tag_view_form" model="ir.ui.view">
    <field name="name">documents.tag.form</field>
    <field name="model">documents.tag</field>
    <field name="arch" type="xml">
      <form string="Tag">
        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="Tag name"/></h1>
          </div>
          <group>
            <group>
              <field name="folder_id"/>
              <field name="facet_id"/>
              <field name="sequence"/>
            </group>
            <group>
              <field name="color"/>
              <field name="active"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Tag List View -->
  <record id="documents_tag_view_list" model="ir.ui.view">
    <field name="name">documents.tag.list</field>
    <field name="model">documents.tag</field>
    <field name="arch" type="xml">
      <list string="Tags">
        <field name="name"/>
        <field name="folder_id"/>
        <field name="facet_id"/>
        <field name="sequence"/>
        <field name="color"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Action & Menu -->
  <record id="action_documents_tags" model="ir.actions.act_window">
    <field name="name">Tags</field>
    <field name="res_model">documents.tag</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- <menuitem id="menu_documents_tags" name="Tags"
            parent="custom_docs.menu_documents_root" action="action_documents_tags" sequence="30"/> -->

</odoo>
