<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Share Portal Template -->
    <template id="share_portal" name="Documents Share Portal">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1>Shared Documents</h1>
                <t t-if="share.state == 'live'">
                    <div class="row mt-4">
                        <t t-foreach="documents" t-as="document">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="document.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Size: <t t-esc="document.file_size"/> bytes<br/>
                                                Type: <t t-esc="document.mimetype"/>
                                            </small>
                                        </p>
                                        <a t-att-href="'/documents/download/%s/%s' % (document.id, share.access_token)" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fa fa-download"/> Download
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    <t t-if="share.action == 'downloadupload'">
                        <div class="mt-4">
                            <h3>Upload Documents</h3>
                            <form method="post" enctype="multipart/form-data" 
                                  t-att-action="'/documents/upload/%s' % share.access_token">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group">
                                    <input type="file" name="files" multiple="multiple" class="form-control-file"/>
                                </div>
                                <button type="submit" class="btn btn-primary">Upload</button>
                            </form>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="alert alert-warning">
                        This share link has expired or is no longer valid.
                    </div>
                </t>
            </div>
        </t>
    </template>
    
    <!-- Invalid Share Template -->
    <template id="share_invalid" name="Invalid Share">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="alert alert-danger">
                    <h4>Invalid Share Link</h4>
                    <p>The share link you are trying to access is invalid or has expired.</p>
                </div>
            </div>
        </t>
    </template>
</odoo>