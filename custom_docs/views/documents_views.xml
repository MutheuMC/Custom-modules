<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Kanban View with Custom Widget -->
    <record id="documents_document_view_kanban" model="ir.ui.view">
        <field name="name">documents.document.kanban</field>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <kanban class="o_documents_kanban" js_class="documents_kanban" 
                    default_group_by="folder_id" default_order="create_date desc"
                    quick_create="false" create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="mimetype"/>
                <field name="type"/>
                <field name="datas" filename="name"/>
                <field name="url"/>
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="is_locked"/>
                <field name="is_shared"/>
                <field name="owner_id"/>
                <field name="partner_id"/>
                <field name="tag_ids"/>
                <field name="folder_id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <field name="file_size"/>
                <field name="color"/>
                <progressbar field="activity_state" colors='{"planned": "success", "overdue": "danger", "today": "warning"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_documents_kanban_record">
                            <div class="o_kanban_image text-center p-3">
                                <t t-if="record.type.raw_value == 'binary'">
                                    <div t-if="record.mimetype.value &amp;&amp; record.mimetype.value.indexOf('pdf') !== -1" 
                                         class="o_image o_image_pdf">
                                        <i class="fa fa-file-pdf-o fa-3x text-danger"/>
                                    </div>
                                    <div t-elif="record.mimetype.value &amp;&amp; record.mimetype.value.indexOf('image') !== -1" 
                                         class="o_image o_image_image">
                                        <i class="fa fa-file-image-o fa-3x text-success"/>
                                    </div>
                                    <div t-elif="record.mimetype.value &amp;&amp; record.mimetype.value.indexOf('video') !== -1" 
                                         class="o_image o_image_video">
                                        <i class="fa fa-file-video-o fa-3x text-primary"/>
                                    </div>
                                    <div t-elif="record.mimetype.value &amp;&amp; record.mimetype.value.indexOf('spreadsheet') !== -1" 
                                         class="o_image o_image_spreadsheet">
                                        <i class="fa fa-file-excel-o fa-3x text-success"/>
                                    </div>
                                    <div t-elif="record.mimetype.value &amp;&amp; record.mimetype.value.indexOf('word') !== -1" 
                                         class="o_image o_image_word">
                                        <i class="fa fa-file-word-o fa-3x text-primary"/>
                                    </div>
                                    <div t-else="" class="o_image o_image_default">
                                        <i class="fa fa-file-o fa-3x text-muted"/>
                                    </div>
                                </t>
                                <t t-elif="record.type.raw_value == 'url'">
                                    <div class="o_image o_image_url">
                                        <i class="fa fa-link fa-3x text-info"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="o_image o_image_request">
                                        <i class="fa fa-clock-o fa-3x text-warning"/>
                                    </div>
                                </t>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="text-muted small">
                                    <t t-if="record.file_size.raw_value">
                                        <span t-esc="Math.round(record.file_size.raw_value / 1024) + ' KB'"/>
                                    </t>
                                </div>
                                <div class="o_kanban_tags_section mt-2">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                    <t t-if="record.is_locked.raw_value">
                                        <i class="fa fa-lock" title="Locked"/>
                                    </t>
                                    <t t-if="record.is_shared.raw_value">
                                        <i class="fa fa-share-alt" title="Shared"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="owner_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Search View with Search Panel -->
    <record id="documents_document_view_search" model="ir.ui.view">
        <field name="name">documents.document.search</field>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <search string="Documents">
                <field name="name" string="Document"/>
                <field name="partner_id"/>
                <field name="owner_id"/>
                <field name="tag_ids"/>
                <filter string="My Documents" name="my_documents" 
                        domain="[('owner_id', '=', uid)]"/>
                <filter string="Shared with me" name="shared_with_me" 
                        domain="[('owner_id', '!=', uid)]"/>
                <separator/>
                <filter string="Files" name="files" 
                        domain="[('type', '=', 'binary')]"/>
                <filter string="Links" name="links" 
                        domain="[('type', '=', 'url')]"/>
                <filter string="Requests" name="requests" 
                        domain="[('type', '=', 'empty')]"/>
                <separator/>
                <filter string="Locked" name="locked" 
                        domain="[('is_locked', '=', True)]"/>
                <filter string="Shared" name="shared" 
                        domain="[('is_shared', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="archived" 
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_by_type" 
                            domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Owner" name="group_by_owner" 
                            domain="[]" context="{'group_by': 'owner_id'}"/>
                    <filter string="Contact" name="group_by_partner" 
                            domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Creation Date" name="group_by_create_date" 
                            domain="[]" context="{'group_by': 'create_date:month'}"/>
                </group>
                <searchpanel>
                    <field name="folder_id" string="Folders" 
                           enable_counters="1" icon="fa-folder" 
                           hierarchize="1" expand="1"/>
                    <field name="tag_ids" string="Tags" 
                           groupby="facet_id" enable_counters="1" 
                           icon="fa-tag" select="multi" expand="0"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Document list View -->
   <!-- Document list View -->
    <record id="documents_document_view_list" model="ir.ui.view">
        <field name="name">documents.document.list</field>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <list string="Documents" multi_edit="1" create="false">
                <field name="name"/>
                <field name="folder_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="partner_id" optional="show"/>
                <field name="owner_id" widget="many2one_avatar_user"/>
                <field name="type"/>
                <field name="file_size" widget="integer" optional="show"/>
                <field name="create_date" optional="show"/>
                <field name="write_date" optional="hide"/>
                <field name="activity_ids" widget="list_activity"/>
                <button name="action_download" type="object" 
                        string="Download" icon="fa-download" 
                        invisible="type != 'binary'"/>
                <button name="action_share" type="object" 
                        string="Share" icon="fa-share-alt"/>
            </list>
        </field>
    </record>

    <!-- Document Form View -->
    <!-- Document Form View -->
    <record id="documents_document_view_form" model="ir.ui.view">
        <field name="name">documents.document.form</field>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <form string="Document" create="false">
                <header>
                    <button name="action_lock" type="object" string="Lock" 
                            class="btn-secondary" invisible="is_locked"/>
                    <button name="action_unlock" type="object" string="Unlock" 
                            class="btn-secondary" invisible="not is_locked"/>
                    <button name="action_download" type="object" string="Download" 
                            class="btn-primary" invisible="type != 'binary'"/>
                    <button name="action_share" type="object" string="Share" 
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                  options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Locked" 
                            invisible="not is_locked"/>
                    <widget name="web_ribbon" title="Shared" bg_color="bg-success" 
                            invisible="not is_shared"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="folder_id"/>
                            <field name="partner_id"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="datas" filename="name" 
                                  invisible="type != 'binary'" 
                                  required="type == 'binary'"/>
                            <field name="url" widget="url" 
                                  invisible="type != 'url'"
                                  required="type == 'url'"/>
                            <field name="file_size" widget="integer" 
                                  invisible="type != 'binary'"/>
                            <field name="mimetype" 
                                  invisible="type != 'binary'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tags">
                            <field name="tag_ids" widget="many2many_tags" 
                                  options="{'color_field': 'color'}"/>
                        </page>
                        <page string="Request Info" 
                              invisible="type != 'empty'">
                            <group>
                                <field name="request_partner_id"/>
                                <field name="request_date"/>
                                <field name="request_deadline"/>
                                <field name="request_message"/>
                            </group>
                        </page>
                        <page string="Actions">
                            <field name="available_rule_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="folder_id"/>
                                    <button name="apply_actions" type="object" 
                                            string="Apply" class="btn-sm btn-primary" 
                                            context="{'document_ids': [id]}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Main Document Action -->
    <record id="action_documents" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">documents.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="documents_document_view_search"/>
        <field name="context">{'search_default_my_documents': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents yet
            </p>
            <p>
                Upload your files or create links to online documents.
                Use the dropdown menu above to get started.
            </p>
        </field>
    </record>
</odoo>