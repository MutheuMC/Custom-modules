<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Folder Form View -->
    <record id="documents_folder_view_form" model="ir.ui.view">
        <field name="name">documents.folder.form</field>
        <field name="model">documents.folder</field>
        <field name="arch" type="xml">
            <form string="Folder">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_see_documents" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="document_count" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                        invisible = "[('active', '=', True)]"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Folder Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_folder_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="icon"/>
                            <field name="color" widget="color_picker"/>
                            <field name="user_specific"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                        <page string="Access Rights">
                            <group>
                                <field name="read_group_ids" widget="many2many_tags"/>
                                <field name="write_group_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Tags">
                            <field name="tag_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <!-- <field name="facet_id"/> -->
                                    <field name="name"/>
                                    <field name="color" widget="color_picker"/>
                                </list>
                            </field>
                        </page>
                        <page string="Workflow Rules">
                            <field name="workflow_rule_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="condition_type"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Folder list View -->
    <record id="documents_folder_view_list" model="ir.ui.view">
        <field name="name">documents.folder.list</field>
        <field name="model">documents.folder</field>
        <field name="arch" type="xml">
            <list string="Folders">
                <field name="sequence" widget="handle"/>
                <field name="complete_name"/>
                <field name="document_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    
    <!-- Folder Action -->
    <record id="action_documents_folders" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="res_model">documents.folder</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>