<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups -->
    <record id="group_documents_user" model="res.groups">
        <field name="name">Documents User</field>
        <field name="category_id" ref="base.module_category_productivity_documents"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_documents_manager" model="res.groups">
        <field name="name">Documents Manager</field>
        <field name="category_id" ref="base.module_category_productivity_documents"/>
        <field name="implied_ids" eval="[(4, ref('group_documents_user'))]"/>
    </record>
    
    <!-- Record Rules -->
    <record id="documents_document_rule_user" model="ir.rule">
        <field name="name">Documents: User Access</field>
        <field name="model_id" ref="model_documents_document"/>
        <field name="domain_force">[
            '|',
            ('owner_id', '=', user.id),
            ('folder_id.user_specific', '=', False)
        ]</field>
        <field name="groups" eval="[(4, ref('group_documents_user'))]"/>
    </record>
    
    <record id="documents_document_rule_manager" model="ir.rule">
        <field name="name">Documents: Manager Access</field>
        <field name="model_id" ref="model_documents_document"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_documents_manager'))]"/>
    </record>
    
    <record id="documents_folder_rule_company" model="ir.rule">
        <field name="name">Documents Folder: Company Rule</field>
        <field name="model_id" ref="model_documents_folder"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>