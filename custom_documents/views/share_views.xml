<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================================================
         DOCUMENT SHARE WIZARD (Simplified)
         ========================================================= -->
    <record id="view_custom_document_share_wizard_form_simple" model="ir.ui.view">
        <field name="name">custom.document.share.wizard.form.simple</field>
        <field name="model">custom.document.share.wizard</field>
        <field name="arch" type="xml">
            <form string="Share Document" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <!-- ADD PEOPLE -->
                        <group string="Share with people">
                            <field name="partner_ids"
                                   widget="many2many_tags"
                                   placeholder="Enter names to share..."
                                   options="{'no_create_edit': True}"
                                   nolabel="1"/>
                        </group>
                        
                        <!-- PEOPLE WITH ACCESS -->
                        <group string="People with access">
                            <div class="o_share_people_table">
                                <!-- Owner row -->
                                <div class="o_share_owner_row">
                                    <div class="o_owner_left">
                                        <field name="owner_partner_id"
                                            widget="many2one_avatar"
                                            nolabel="1"
                                            readonly="1"
                                            options="{'no_open': True, 'display_avatar_name': false}"/>
                                    </div>
                                    <div class="o_owner_right">
                                         <span class="badge rounded-pill bg-info">
                                            <i class="fa fa-user-shield me-1"/> Owner
                                        </span>
                                    </div>
                                </div>

                                <!-- Inline list of people with access -->
                                <field name="share_line_ids"
                                    class="o_share_people_inline_list"
                                    nolabel="1"
                                    context="{'default_document_id': document_id}"
                                    editable="bottom">
                                    <list editable="bottom" delete="1" create="0">
                                        <field name="partner_id"
                                            string="Person"
                                            widget="many2one_avatar"
                                            readonly="1"
                                            options="{'no_open': True}"/>
                                        <field name="email" string="Email" readonly="1" optional="show"/>
                                        <field name="create_date" string="Shared On" readonly="1"/>
                                    </list>
                                </field>
                            </div>

                        </group>
                       
                    </group>
                      <div class="alert alert-info small" invisible="share_line_ids">
                                <i class="fa fa-lock"/> This document is not shared yet
                       </div>

                    <group>
                        <group>
                            <button name="action_share_internal"
                                    type="object"
                                    class="btn-outline-primary"
                                    string="Share with Internal Users"
                                    invisible="internal_not_shared_count == 0"/>

                            <span class="badge rounded-pill bg-success"
                                  invisible="internal_not_shared_count != 0">
                                <i class="fa fa-check me-1"/> Shared with Internal Users
                            </span>
                                
                            <field name="share_access" widget="badge" readonly="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_share"
                            type="object"
                            string="Share"
                            class="btn-primary"
                            invisible="not partner_ids"/>
                    <button string="Done" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Document Share Action -->
    <record id="action_custom_document_share_wizard" model="ir.actions.act_window">
        <field name="name">Share Document</field>
        <field name="res_model">custom.document.share.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_custom_document_share_wizard_form_simple"/>
        <field name="target">new</field>
    </record>

    <!-- =========================================================
         FOLDER SHARE WIZARD (Enhanced with Internal Users)
         ========================================================= -->
    <record id="view_custom_folder_share_wizard_form_enhanced" model="ir.ui.view">
        <field name="name">custom.folder.share.wizard.form.enhanced</field>
        <field name="model">custom.folder.share.wizard</field>
        <field name="arch" type="xml">
            <form string="Share Folder" create="0" edit="0" delete="0">
                <sheet>
                    <div class="alert alert-warning mb-3">
                        <strong><i class="fa fa-exclamation-triangle"/> Important:</strong>
                        People you share this folder with will have access to:
                        <ul class="mb-0">
                            <li>All documents currently in this folder</li>
                            <li>All documents added to this folder in the future</li>
                            <li>All subfolders and their contents (if "Include Subfolders" is enabled)</li>
                        </ul>
                    </div>

                    <group>
                        <!-- ADD PEOPLE -->
                        <group string="Share with people">
                            <field name="partner_ids"
                                   widget="many2many_tags"
                                   placeholder="Enter names to share..."
                                   options="{'no_create_edit': True}"
                                   nolabel="1"/>
                        </group>

                        <!-- PEOPLE WITH ACCESS -->
                        <group string="People with access">
                            <div class="o_share_people_table">
                                <!-- Owner row -->
                                <div class="o_share_owner_row">
                                    <div class="o_owner_left">
                                        <field name="owner_partner_id"
                                               widget="many2one_avatar"
                                               nolabel="1"
                                               readonly="1"
                                               options="{'no_open': True, 'display_avatar_name': false}"/>
                                    </div>
                                    <div class="o_owner_right">
                                        <span class="badge rounded-pill bg-info">
                                            <i class="fa fa-user-shield me-1"/> Owner
                                        </span>
                                    </div>
                                </div>

                                <!-- Inline list of people with access -->
                                <field name="share_ids"
                                       class="o_share_people_inline_list"
                                       nolabel="1"
                                       context="{'default_folder_id': folder_id}"
                                       editable="bottom">
                                    <list editable="bottom" delete="1" create="0">
                                        <!-- <field name="partner_id"
                                               string="Person"
                                               widget="many2one_avatar"
                                               readonly="1"
                                               options="{'no_open': True}"/> -->
                                        <field name="email" string="Email" readonly="1" />
                                        <field name="recursive" string="Include Subfolders"/>
                                        <field name="create_date" string="Shared On" readonly="1"/>
                                    </list>
                                </field>
                            </div>

                            <div class="alert alert-info small" invisible="share_ids">
                                <i class="fa fa-lock"/> This folder is not shared yet
                            </div>
                        </group>
                    </group>

                    <!-- INTERNAL USERS SECTION -->
                    <group>
                        <group>
                            <!-- Show button when there are internal users not shared with -->
                            <button name="action_share_internal"
                                    type="object"
                                    class="btn-outline-primary"
                                    string="Share with Internal Users"
                                    invisible="internal_not_shared_count == 0"
                                    help="Share this folder with all internal users in the company"/>

                            <!-- Show badge when everyone internal already has access -->
                            <span class="badge rounded-pill bg-success"
                                  invisible="internal_not_shared_count != 0">
                                <i class="fa fa-check me-1"/> Shared with Internal Users
                            </span>

                            <!-- Hidden fields for computation -->
                            <field name="internal_not_shared_count" invisible="1"/>
                            <field name="internal_fully_shared" invisible="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_share"
                            type="object"
                            string="Share"
                            class="btn-primary"
                            invisible="not partner_ids"/>
                    <button string="Done" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Folder Share Action -->
    <record id="action_custom_folder_share_wizard" model="ir.actions.act_window">
        <field name="name">Share Folder</field>
        <field name="res_model">custom.folder.share.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_custom_folder_share_wizard_form_enhanced"/>
        <field name="target">new</field>
    </record>

</odoo>