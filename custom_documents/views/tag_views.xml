<odoo>
  <data>
    <!-- Tag List View -->
    <record id="view_document_tag_list" model="ir.ui.view">
      <field name="name">document.tag.list</field>
      <field name="model">document.tag</field>
      <field name="arch" type="xml">
        <list string="Tags" decoration-muted="active == False">
          <field name="name"/>
          <field name="color" widget="color"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <!-- Tag Form View -->
    <record id="view_document_tag_form" model="ir.ui.view">
      <field name="name">document.tag.form</field>
      <field name="model">document.tag</field>
      <field name="arch" type="xml">
        <form string="Tag">
          <sheet>
            <group>
              <field name="name"/>
              <field name="color" widget="color"/>
              <field name="active"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action for Tags -->
    <record id="action_document_tag" model="ir.actions.act_window">
      <field name="name">Tags</field>
      <field name="res_model">document.tag</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Create a new tag</p>
      </field>
    </record>
  </data>
</odoo>
