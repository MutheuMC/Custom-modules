<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_document_reference_wizard_form" model="ir.ui.view">
        <field name="name">custom.document.reference.wizard.form</field>
        <field name="model">custom.document.reference.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Reference Number">
                <group>
                    <field name="document_id" readonly="1"/>
                    <field name="department"/>
                </group>
                <footer>
                    <button string="Generate"
                            name="action_generate_reference"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
