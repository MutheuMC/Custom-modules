<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Folder Tree View -->
        <record id="view_document_folder_tree" model="ir.ui.view">
            <field name="name">document.folder.list</field>
            <field name="model">document.folder</field>
            <field name="arch" type="xml">
                <list string="Folders">
                    <field name="name"/>
                    <field name="complete_name"/>
                    <field name="sequence"/>
                    <!-- <field name="document_count" string="Documents"/> -->
                </list>
            </field>
        </record>

        <!-- Folder Form View -->
        <record id="view_document_folder_form" model="ir.ui.view">
            <field name="name">document.folder.form</field>
            <field name="model">document.folder</field>
            <field name="arch" type="xml">
                <form string="Folder">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_id"/>
                                <field name="sequence"/>
                                <field name="color" widget="color"/>
                            </group>
                            <group>
                                <field name="group_ids" widget="many2many_tags"/>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Folders -->
        <record id="action_document_folder" model="ir.actions.act_window">
            <field name="name">Folders</field>
            <field name="res_model">document.folder</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_sequence': 10}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new folder</p>
            </field>
        </record>
    </data>
</odoo>