<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rules for folder access -->
        <record id="document_folder_rule" model="ir.rule">
            <field name="name">Document Folder Access</field>
            <field name="model_id" ref="model_document_folder"/>
            <field name="domain_force">
                ['|', ('user_ids', 'in', [user.id]), ('group_ids', 'in', user.groups_id.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record rules for document access -->
        <record id="document_document_rule" model="ir.rule">
            <field name="name">Document Access</field>
            <field name="model_id" ref="model_document_document"/>
            <field name="domain_force">
                ['|', ('folder_id.user_ids', 'in', [user.id]), ('folder_id.group_ids', 'in', user.groups_id.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>