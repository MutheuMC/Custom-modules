<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <!-- Custom Folder List Buttons Template -->
  <t t-name="custom_documents.CustomFolderListButtons" owl="1">
    <div class="btn-group o_cp_buttons" role="group">
      <!-- New Folder Dropdown -->
      <div class="dropdown">
        <button type="button" 
                class="btn btn-primary dropdown-toggle" 
                data-bs-toggle="dropdown" 
                aria-expanded="false">
          <i class="fa fa-plus me-1"></i>New
        </button>
        <ul class="dropdown-menu">
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onCreateFolder()">
              <i class="fa fa-folder fa-fw me-2"></i>New Folder
            </a>
          </li>
          <li><hr class="dropdown-divider"/></li>
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onViewDocuments()">
              <i class="fa fa-file-text-o fa-fw me-2"></i>View Documents
            </a>
          </li>
        </ul>
      </div>
    </div>
  </t>
</templates>