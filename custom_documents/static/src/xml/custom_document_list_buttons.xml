<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="custom_documents.CustomDocumentListButtons" owl="1">
    <div class="btn-group o_cp_buttons" role="group">
      <div class="dropdown">
        <button type="button" 
                class="btn btn-primary dropdown-toggle" 
                data-bs-toggle="dropdown" 
                aria-expanded="false">
          <i class="fa fa-plus me-1"></i>New
        </button>
        <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onReferenceCreate()">
              <i class="fa fa-upload fa-fw me-2"></i>Generate REF
            </a>
          </li>
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onUploadFile()">
              <i class="fa fa-upload fa-fw me-2"></i>Upload file
            </a>
          </li>
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onUploadFolder()">
              <i class="fa fa-folder-open fa-fw me-2"></i>Upload folder
            </a>
          </li>
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onAddUrl()">
              <i class="fa fa-link fa-fw me-2"></i>Add URL
            </a>
          </li>
          <li><hr class="dropdown-divider"/></li>
          <li>
            <a class="dropdown-item" 
               href="#" 
               role="menuitem"
               t-on-click.prevent="() => this.onCreateFolder()">
              <i class="fa fa-folder fa-fw me-2"></i>New folder
            </a>
          </li>
        </ul>
      </div>
    </div>
  </t>
</templates>