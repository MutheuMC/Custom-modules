<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="ir_cron_attendance_midnight_rollover" model="ir.cron">
      <field name="name">Attendance: Midnight Rollover</field>
      <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
      <field name="state">code</field>
      <field name="code">model.cron_auto_logout_midnight_rollover()</field>
      <field name="user_id" ref="base.user_root"/>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <!-- don't set nextcall; adjust after install in UI if you want 00:05 local -->
      <field name="active" eval="True"/>
      <field name="priority">5</field>
    </record>
  </data>
</odoo>
