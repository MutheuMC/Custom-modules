<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="custom_documents.SelectionButtons" owl="1">
        <div t-if="showButtons" class="btn-group ms-2" role="group">
            <button type="button" 
                    class="btn btn-primary"
                    t-on-click="onDownload">
                <i class="fa fa-download me-1"/>
                Download
            </button>
            <button type="button" 
                    class="btn btn-secondary"
                    t-on-click="onShare">
                <i class="fa fa-share-alt me-1"/>
                Share
            </button>
        </div>
        <div t-elif="isCustomDocument and !hasSelection" class="text-muted ms-2">
            <small>Select documents to show actions</small>
        </div>
    </t>
</templates>