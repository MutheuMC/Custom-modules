<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Create Folder Wizard -->
  <record id="view_custom_document_folder_wizard_form" model="ir.ui.view">
    <field name="name">custom.document.folder.wizard.form</field>
    <field name="model">custom.document.folder.wizard</field>
    <field name="arch" type="xml">
     <form string="Create Folder">
      <group>
        <field name="name" string="Folder Name" placeholder="e.g. Design Docs"/>
        <field name="parent_id" string="Parent Folder" options="{'no_create': True}"/>
      </group>
      <footer>
        <button name="action_create" type="object" string="Create" class="btn-primary"/>
        <button string="Cancel" class="btn-secondary" special="cancel"/>
      </footer>
    </form>

    </field>
  </record>

  <record id="action_custom_document_folder_wizard" model="ir.actions.act_window">
    <field name="name">Create Folder</field>
    <field name="res_model">custom.document.folder.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
