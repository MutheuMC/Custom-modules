<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- People line list (inline in wizard) -->
  <record id="view_custom_document_share_line_list" model="ir.ui.view">
    <field name="name">custom.document.share.line.list</field>
    <field name="model">custom.document.share.line</field>
    <field name="arch" type="xml">
      <list editable="bottom">
        <field name="partner_id"/>
        <field name="role"/>
      </list>
    </field>
  </record>

  <!-- Share wizard -->
  <record id="view_custom_document_share_wizard_form" model="ir.ui.view">
    <field name="name">custom.document.share.wizard.form</field>
    <field name="model">custom.document.share.wizard</field>
    <field name="arch" type="xml">
      <form string="Share" create="0" edit="0" delete="0">
        <sheet>
            <div class="oe_title">
                <h2><field name="document_name" nolabel="1"/></h2>
            </div>

          <group>
            <group string="Add people">
              <field name="partner_ids" widget="many2many_tags" options="{'no_create_edit': False}"/>
              <field name="role"/>
              <button name="action_add_people" type="object" class="btn-primary" string="Add"/>
            </group>

            <group string="General access">
              <field name="share_access"/>
              <button name="action_copy_view_link" type="object" string="Copy view link" class="btn-secondary"/>
              <button name="action_copy_edit_link" type="object" string="Copy edit link" class="btn-secondary"
                      invisible="share_access not in ['link_edit']"/>
              <div class="text-muted">
                Internal users can always authenticate; 'Anyone with link' works without login.
              </div>
            </group>
          </group>

          <group string="People with access">
            <field name="people_ids" context="{'default_document_id': document_id}" 
                   options="{'no_create_edit': False}" 
                   nolabel="1"
                   mode="list">
              <list editable="bottom">
                <field name="partner_id"/>
                <field name="role"/>
              </list>
            </field>
          </group>
        </sheet>
        <footer>
          <button string="Done" class="btn-primary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_custom_document_share_wizard" model="ir.actions.act_window">
    <field name="name">Share</field>
    <field name="res_model">custom.document.share.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>