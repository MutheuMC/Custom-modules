<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Timesheet Line: Tree -->
    <record id="view_account_analytic_line_tree_timer" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.timer</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <!-- Keep our helper fields around, hidden -->
            <field name="unit_amount" position="after">
                <field name="is_timer_running" invisible="1"   optional="hide" column_invisible="1"/>
                <field name="timer_start" invisible="1"    optional="hide" column_invisible="1"/>
                <field name="timer_pause" invisible="1"    optional="hide" column_invisible="1"/>
            </field>
            <!-- Replace the widget for unit_amount -->
            <field name="unit_amount" position="attributes">
                <attribute name="widget">timesheet_timer</attribute>
                <attribute name="sum">Total</attribute>
            </field>
        </field>
    </record>

    <!-- Timesheet Line: Form -->
    <record id="view_account_analytic_line_form_timer" model="ir.ui.view">
        <field name="name">account.analytic.line.form.timer</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <field name="unit_amount" position="after">
                <field name="is_timer_running" invisible="1"/>
                <field name="timer_start" invisible="1"/>
                <field name="timer_pause" invisible="1"/>
            </field>
            <field name="unit_amount" position="attributes">
                <attribute name="widget">timesheet_timer</attribute>
            </field>
        </field>
    </record>

    <!-- Optional: show running badge in kanban (if view exists in your db) -->
    <record id="view_account_analytic_line_kanban_timer" model="ir.ui.view">
        <field name="name">account.analytic.line.kanban.timer</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.view_kanban_account_analytic_line"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="is_timer_running"/>
            </xpath>
            <xpath expr="//field[@name='unit_amount']" position="before">
                <t t-if="record.is_timer_running.raw_value">
                    <span class="badge text-bg-success me-1" title="Timer Running">
                        <i class="fa fa-play"/>
                    </span>
                </t>
            </xpath>
        </field>
    </record>

    <!-- Server Action: Stop all timers for this model -->
    <record id="action_stop_all_timers" model="ir.actions.server">
        <field name="name">Stop All Running Timers</field>
        <field name="model_id" ref="analytic.model_account_analytic_line"/>
        <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code"><![CDATA[
running_timers = model.search([('is_timer_running', '=', True)])
for timer in running_timers:
    timer.action_timer_stop()
        ]]></field>
    </record>
</odoo>