<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the form view and apply the widget -->
    <record id="hr_timesheet_line_form_extension" model="ir.ui.view">
        <field name="name">hr.timesheet.line.form.extension</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="timesheet_timer.hr_timesheet_line_form_base_view"/>
        <field name="arch" type="xml">
            <field name="unit_amount" position="attributes">
                <attribute name="widget">timesheet_timer</attribute>
            </field>
        </field>
    </record>

    <!-- Inherit the tree view and apply the widget -->
    <record id="view_hr_timesheet_line_tree_extension" model="ir.ui.view">
        <field name="name">hr.timesheet.line.tree.extension</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="timesheet_timer.view_hr_timesheet_line_tree_base_view"/>
        <field name="arch" type="xml">
            <field name="unit_amount" position="attributes">
                <attribute name="widget">timesheet_timer</attribute>
            </field>
        </field>
    </record>
</odoo>