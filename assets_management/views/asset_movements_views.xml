<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Movement Form View -->
    <record id="view_asset_movement_form" model="ir.ui.view">
        <field name="name">asset.movement.form</field>
        <field name="model">asset.movement</field>
        <field name="arch" type="xml">
            <form string="Asset Movement">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                    <button name="action_done" string="Mark as Done" type="object" class="btn-success" states="confirmed"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="movement_type"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Movement Details">
                            <group>
                                <group string="From">
                                    <field name="from_location_id" attrs="{'invisible': [('movement_type', 'in', ['assign'])]}"/>
                                    <field name="from_employee_id" attrs="{'invisible': [('movement_type', 'in', ['assign', 'location'])]}"/>
                                    <field name="from_department_id" attrs="{'invisible': [('movement_type', 'in', ['assign', 'location'])]}"/>
                                </group>
                                <group string="To">
                                    <field name="to_location_id" attrs="{'invisible': [('movement_type', 'in', ['return'])]}"/>
                                    <field name="to_employee_id" attrs="{'invisible': [('movement_type', 'in', ['return', 'location', 'repair', 'maintenance'])]}"/>
                                    <field name="to_department_id" attrs="{'invisible': [('movement_type', 'in', ['return', 'location', 'repair', 'maintenance'])]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="reason" nolabel="1" placeholder="Reason for movement..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Asset Movement Tree View -->
    <record id="view_asset_movement_tree" model="ir.ui.view">
        <field name="name">asset.movement.tree</field>
        <field name="model">asset.movement</field>
        <field name="arch" type="xml">
            <tree string="Asset Movements">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="movement_type"/>
                <field name="date"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <field name="from_employee_id"/>
                <field name="to_employee_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'confirmed'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- Asset Movement Search View -->
    <record id="view_asset_movement_search" model="ir.ui.view">
        <field name="name">asset.movement.search</field>
        <field name="model">asset.movement</field>
        <field name="arch" type="xml">
            <search string="Search Asset Movements">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="from_employee_id"/>
                <field name="to_employee_id"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today().replace(day=1) + relativedelta(months=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Asset" name="asset" context="{'group_by': 'asset_id'}"/>
                    <filter string="Movement Type" name="type" context="{'group_by': 'movement_type'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Asset Movement Action -->
    <record id="action_asset_movement" model="ir.actions.act_window">
        <field name="name">Asset Movements</field>
        <field name="res_model">asset.movement</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first asset movement
            </p>
            <p>
                Track asset movements between locations, departments, and employees.
            </p>
        </field>
    </record>
</odoo>