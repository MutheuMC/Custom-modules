<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Repair Form View -->
    <record id="view_asset_repair_form" model="ir.ui.view">
        <field name="name">asset.repair.form</field>
        <field name="model">asset.repair</field>
        <field name="arch" type="xml">
            <form string="Asset Repair">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="reported"/>
                    <button name="action_start_repair" string="Start Repair" type="object" class="btn-warning" states="confirmed"/>
                    <button name="action_done" string="Mark as Done" type="object" class="btn-success" states="in_repair"/>
                    <button name="action_cancel" string="Cancel" type="object" states="reported,confirmed,in_repair"/>
                    <field name="state" widget="statusbar" statusbar_visible="reported,confirmed,in_repair,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="object" name="action_view_asset" icon="fa-cube">
                        <div class="o_stat_info"><span class="o_stat_text">View Asset</span></div>
                    </button>

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="date"/>
                            <field name="completed_date" readonly="1"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="technician"/>
                            <field name="cost" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="invoice_id"/>
                            <field name="warranty_claim"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Problem &amp; Solution">
                            <group>
                                <field name="problem_description" nolabel="1" placeholder="Describe the problem..."/>
                            </group>
                            <separator string="Repair Description"/>
                            <group>
                                <field name="repair_description" nolabel="1" placeholder="Describe the repair work done..."/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Asset Repair Tree View -->
    <record id="view_asset_repair_tree" model="ir.ui.view">
        <field name="name">asset.repair.tree</field>
        <field name="model">asset.repair</field>
        <field name="arch" type="xml">
            <tree string="Asset Repairs">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="date"/>
                <field name="vendor_id"/>
                <field name="technician"/>
                <field name="cost" widget="monetary"/>
                <field name="priority" widget="badge" decoration-danger="priority == 'urgent'" decoration-warning="priority == 'high'"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'in_repair'" decoration-info="state in ('reported', 'confirmed')"/>
            </tree>
        </field>
    </record>

    <!-- Asset Repair Calendar View -->
    <record id="view_asset_repair_calendar" model="ir.ui.view">
        <field name="name">asset.repair.calendar</field>
        <field name="model">asset.repair</field>
        <field name="arch" type="xml">
            <calendar string="Repair Schedule" date_start="date" color="priority">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="vendor_id"/>
            </calendar>
        </field>
    </record>

    <!-- Asset Repair Search View -->
    <record id="view_asset_repair_search" model="ir.ui.view">
        <field name="name">asset.repair.search</field>
        <field name="model">asset.repair</field>
        <field name="arch" type="xml">
            <search string="Search Asset Repairs">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="vendor_id"/>
                <field name="technician"/>
                <filter string="Reported" name="reported" domain="[('state', '=', 'reported')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', 'in', ['confirmed', 'in_repair'])]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['high', 'urgent'])]"/>
                <filter string="Warranty Claims" name="warranty" domain="[('warranty_claim', '=', True)]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today().replace(day=1) + relativedelta(months=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Asset" name="asset" context="{'group_by': 'asset_id'}"/>
                    <filter string="Vendor" name="vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Priority" name="priority_group" context="{'group_by': 'priority'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Asset Repair Action -->
    <record id="action_asset_repair" model="ir.actions.act_window">
        <field name="name">Asset Repairs</field>
        <field name="res_model">asset.repair</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first repair record
            </p>
            <p>
                Track asset repairs, costs, and vendor information.
            </p>
        </field>
    </record>
</odoo>