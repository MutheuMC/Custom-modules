<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Depreciation Line Form View -->
    <record id="view_asset_depreciation_line_form" model="ir.ui.view">
        <field name="name">asset.depreciation.line.form</field>
        <field name="model">asset.depreciation.line</field>
        <field name="arch" type="xml">
            <form string="Depreciation Line">
                <header>
                    <button name="create_depreciation_entry" string="Post Entry" type="object" class="btn-primary" states="draft"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="asset_id"/>
                            <field name="date"/>
                            <field name="depreciation_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="accumulated_depreciation" widget="monetary"/>
                            <field name="remaining_value" widget="monetary"/>
                            <field name="move_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Depreciation Line Tree View -->
    <record id="view_asset_depreciation_line_tree" model="ir.ui.view">
        <field name="name">asset.depreciation.line.tree</field>
        <field name="model">asset.depreciation.line</field>
        <field name="arch" type="xml">
            <tree string="Depreciation Lines" editable="bottom">
                <field name="asset_id"/>
                <field name="date"/>
                <field name="depreciation_amount" widget="monetary"/>
                <field name="accumulated_depreciation" widget="monetary"/>
                <field name="remaining_value" widget="monetary"/>
                <field name="move_id"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-warning="state == 'draft'"/>
                <button name="create_depreciation_entry" string="Post" type="object" icon="fa-check" states="draft"/>
            </tree>
        </field>
    </record>

    <!-- Depreciation Line Search View -->
    <record id="view_asset_depreciation_line_search" model="ir.ui.view">
        <field name="name">asset.depreciation.line.search</field>
        <field name="model">asset.depreciation.line</field>
        <field name="arch" type="xml">
            <search string="Search Depreciation Lines">
                <field name="asset_id"/>
                <field name="date"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today().replace(day=1) + relativedelta(months=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Year" name="this_year" domain="[('date', '&gt;=', context_today().replace(month=1, day=1).strftime('%Y-%m-%d')), ('date', '&lt;=', context_today().replace(month=12, day=31).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Asset" name="asset" context="{'group_by': 'asset_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Depreciation Line Action -->
    <record id="action_asset_depreciation_line" model="ir.actions.act_window">
        <field name="name">Depreciation Lines</field>
        <field name="res_model">asset.depreciation.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No depreciation lines found
            </p>
            <p>
                Depreciation lines are automatically generated when you create depreciation schedules for assets.
            </p>
        </field>
    </record>
</odoo>