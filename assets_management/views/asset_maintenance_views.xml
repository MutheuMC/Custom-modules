<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance Form View -->
    <record id="view_asset_maintenance_form" model="ir.ui.view">
        <field name="name">asset.maintenance.form</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <form string="Asset Maintenance">
                <header>
                    <button name="action_start" string="Start" type="object" class="btn-primary" states="planned"/>
                    <button name="action_done" string="Mark as Done" type="object" class="btn-success" states="in_progress"/>
                    <button name="action_cancel" string="Cancel" type="object" states="planned,in_progress"/>
                    <field name="state" widget="statusbar" statusbar_visible="planned,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_id"/>
                            <field name="maintenance_type"/>
                            <field name="date"/>
                            <field name="due_date"/>
                            <field name="completed_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="performed_by"/>
                            <field name="vendor_id"/>
                            <field name="cost" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="duration"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" placeholder="Maintenance Description..."/>
                    </group>
                    <group string="Recurrence" attrs="{'invisible': [('is_recurring', '=', False)]}">
                        <group>
                            <field name="is_recurring"/>
                            <field name="recurrence_type" attrs="{'required': [('is_recurring', '=', True)]}"/>
                            <field name="recurrence_interval" attrs="{'required': [('is_recurring', '=', True)]}"/>
                            <field name="next_maintenance_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Maintenance Tree View -->
    <record id="view_asset_maintenance_tree" model="ir.ui.view">
        <field name="name">asset.maintenance.tree</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Records">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="maintenance_type"/>
                <field name="date"/>
                <field name="performed_by"/>
                <field name="vendor_id"/>
                <field name="cost" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'in_progress'" decoration-info="state == 'planned'"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Calendar View -->
    <record id="view_asset_maintenance_calendar" model="ir.ui.view">
        <field name="name">asset.maintenance.calendar</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Schedule" date_start="date" color="maintenance_type">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="maintenance_type"/>
            </calendar>
        </field>
    </record>

    <!-- Maintenance Action -->
    <record id="action_asset_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenance</field>
        <field name="res_model">asset.maintenance</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule asset maintenance
            </p>
            <p>
                Keep track of preventive and corrective maintenance for your assets.
            </p>
        </field>
    </record>
</odoo>