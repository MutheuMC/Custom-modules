<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Form View -->
    <record id="view_asset_form" model="ir.ui.view">
        <field name="name">asset.asset.form</field>
        <field name="model">asset.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" states="submit" groups="assets_management.group_asset_manager"/>
                    <button name="action_set_to_use" string="Set to Use" type="object" class="btn-primary" states="approve"/>
                    <button name="action_dispose" string="Dispose" type="object" states="in_use,in_maintenance,in_repair"/>
                    <button name="generate_depreciation_schedule" string="Generate Depreciation" type="object" states="approve,in_use"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,in_use,disposed"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_depreciation_lines" icon="fa-calendar">
                            <div class="o_stat_info">
                                <field name="accumulated_depreciation" widget="monetary"/>
                                <span class="o_stat_text">Depreciation</span>
                            </div>
                        </button>
                        
                        <button class="oe_stat_button" type="object" name="action_view_movements" icon="fa-exchange">
                            <field string="Movements" name="movement_count" widget="statinfo"/>
                        </button>
                        
                        <button class="oe_stat_button" type="object" name="action_view_maintenance" icon="fa-wrench">
                            <field string="Maintenance" name="maintenance_count" widget="statinfo"/>
                        </button>
                        
                        <button class="oe_stat_button" type="object" name="action_view_repairs" icon="fa-tools">
                            <field string="Repairs" name="repair_count" widget="statinfo"/>
                        </button>
                    </div>

                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="asset_code" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="name" placeholder="Asset Name"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="asset_type"/>
                            <field name="asset_tag"/>
                            <field name="barcode"/>
                            <field name="model"/>
                            <field name="serial_no"/>
                            <field name="manufacturer"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="purchase_value" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="current_value" widget="monetary"/>
                            <field name="salvage_value" widget="monetary"/>
                            <field name="vendor_id"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Depreciation">
                            <group>
                                <group>
                                    <field name="depreciation_method"/>
                                    <field name="depreciation_rate" attrs="{'invisible': [('depreciation_method', 'not in', ['declining'])], 'required': [('depreciation_method', 'in', ['declining'])]}"/>
                                    <field name="useful_life" attrs="{'invisible': [('depreciation_method', 'not in', ['straight', 'double_declining'])], 'required': [('depreciation_method', 'in', ['straight', 'double_declining'])]}"/>
                                    <field name="depreciation_start_date"/>
                                </group>
                                <group>
                                    <field name="account_asset_id"/>
                                    <field name="account_depreciation_id"/>
                                    <field name="account_expense_id"/>
                                </group>
                            </group>
                            <field name="depreciation_line_ids" nolabel="1">
                                <tree string="Depreciation Lines" editable="bottom">
                                    <field name="date"/>
                                    <field name="depreciation_amount" widget="monetary"/>
                                    <field name="accumulated_depreciation" widget="monetary"/>
                                    <field name="remaining_value" widget="monetary"/>
                                    <field name="move_id"/>
                                    <field name="state"/>
                                    <button name="create_depreciation_entry" string="Post" type="object" icon="fa-check" states="draft"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Location and Assignment">
                            <group>
                                <group>
                                    <field name="location_id"/>
                                    <field name="department_id"/>
                                    <field name="custodian_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Warranty">
                            <group>
                                <group>
                                    <field name="warranty_start_date"/>
                                    <field name="warranty_end_date"/>
                                    <field name="warranty_vendor_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Insurance">
                            <group>
                                <group>
                                    <field name="is_insured"/>
                                    <field name="insurance_company" attrs="{'invisible': [('is_insured', '=', False)]}"/>
                                    <field name="insurance_policy_no" attrs="{'invisible': [('is_insured', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="insurance_premium" widget="monetary" attrs="{'invisible': [('is_insured', '=', False)]}"/>
                                    <field name="insurance_start_date" attrs="{'invisible': [('is_insured', '=', False)]}"/>
                                    <field name="insurance_end_date" attrs="{'invisible': [('is_insured', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Movements">
                            <field name="movement_ids" nolabel="1">
                                <tree string="Movement History">
                                    <field name="date"/>
                                    <field name="movement_type"/>
                                    <field name="from_location_id"/>
                                    <field name="to_location_id"/>
                                    <field name="from_employee_id"/>
                                    <field name="to_employee_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Maintenance">
                            <field name="maintenance_ids" nolabel="1">
                                <tree string="Maintenance Records">
                                    <field name="date"/>
                                    <field name="maintenance_type"/>
                                    <field name="description"/>
                                    <field name="performed_by"/>
                                    <field name="cost" widget="monetary"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Repairs">
                            <field name="repair_ids" nolabel="1">
                                <tree string="Repair Records">
                                    <field name="date"/>
                                    <field name="problem_description"/>
                                    <field name="vendor_id"/>
                                    <field name="cost" widget="monetary"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Asset Tree View -->
    <record id="view_asset_tree" model="ir.ui.view">
        <field name="name">asset.asset.tree</field>
        <field name="model">asset.asset</field>
        <field name="arch" type="xml">
            <tree string="Assets">
                <field name="asset_code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="asset_type"/>
                <field name="custodian_id"/>
                <field name="department_id"/>
                <field name="purchase_value" widget="monetary"/>
                <field name="current_value" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state == 'in_use'" decoration-warning="state in ('in_maintenance', 'in_repair')" decoration-danger="state in ('disposed', 'lost', 'damaged')"/>
            </tree>
        </field>
    </record>

    <!-- Asset Kanban View -->
    <record id="view_asset_kanban" model="ir.ui.view">
        <field name="name">asset.asset.kanban</field>
        <field name="model">asset.asset</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="asset_code"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="current_value"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('asset.asset', 'image', record.id.raw_value)" alt="Asset"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <span class="text-muted">Code: </span>
                                    <field name="asset_code"/>
                                </div>
                                <div>
                                    <span class="text-muted">Category: </span>
                                    <field name="category_id"/>
                                </div>
                                <div>
                                    <span class="text-muted">Value: </span>
                                    <field name="current_value" widget="monetary"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge" decoration-success="state == 'in_use'" decoration-warning="state in ('in_maintenance', 'in_repair')" decoration-danger="state in ('disposed', 'lost', 'damaged')"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Asset Search View -->
    <record id="view_asset_search" model="ir.ui.view">
        <field name="name">asset.asset.search</field>
        <field name="model">asset.asset</field>
        <field name="arch" type="xml">
            <search string="Search Assets">
                <field name="name"/>
                <field name="asset_code"/>
                <field name="asset_tag"/>
                <field name="barcode"/>
                <field name="serial_no"/>
                <field name="category_id"/>
                <field name="custodian_id"/>
                <field name="department_id"/>
                <filter string="In Use" name="in_use" domain="[('state', '=', 'in_use')]"/>
                <filter string="In Maintenance" name="in_maintenance" domain="[('state', '=', 'in_maintenance')]"/>
                <filter string="In Repair" name="in_repair" domain="[('state', '=', 'in_repair')]"/>
                <separator/>
                <filter string="Insured" name="insured" domain="[('is_insured', '=', True)]"/>
                <filter string="Under Warranty" name="warranty" domain="[('warranty_end_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="category" context="{'group_by': 'category_id'}"/>
                    <filter string="Type" name="type" context="{'group_by': 'asset_type'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
                    <filter string="Custodian" name="custodian" context="{'group_by': 'custodian_id'}"/>
                    <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Asset Action -->
    <record id="action_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">asset.asset</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first asset
            </p>
            <p>
                Manage your company's assets, track depreciation, schedule maintenance, and more.
            </p>
        </field>
    </record>
</odoo>