<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Post Depreciation Cron -->
        <record id="ir_cron_post_depreciation" model="ir.cron">
            <field name="name">Assets: Post Due Depreciation</field>
            <field name="model_id" ref="model_asset_asset"/>
            <field name="state">code</field>
            <field name="code">model.cron_post_depreciation()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Create Recurring Maintenance Cron -->
        <record id="ir_cron_create_maintenance" model="ir.cron">
            <field name="name">Assets: Create Recurring Maintenance</field>
            <field name="model_id" ref="model_asset_maintenance"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_recurring_maintenance()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>