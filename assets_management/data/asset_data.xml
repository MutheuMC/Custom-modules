        </record>
        
        <record id="asset_category_building" model="asset.category">
            <field name="name">Buildings</field>
            <field name="code">BLD</field>
            <field name="depreciation_method">straight</field>
            <field name="useful_life">40</field>
        </record>
        
        <record id="asset_category_machinery" model="asset.category">
            <field name="name">Machinery</field>
            <field name="code">MACH</field>
            <field name="depreciation_method">double_declining</field>
