        <!-- Sample Asset Categories -->
        <record id="asset_category_it" model="asset.category">
            <field name="name">IT Equipment</field>
            <field name="code">IT</field>
            <field name="depreciation_method">straight</field>
            <field name="useful_life">3</field>
        </record>
        
        <record id="asset_category_furniture" model="asset.category">
            <field name="name">Furniture and  Fixtures</field>
            <field name="code">FF</field>
            <field name="depreciation_method">straight</field>
            <field name="useful_life">10</field>
        </record>
        
        <record id="asset_category_vehicle" model="asset.category">
            <field name="name">Vehicles</field>
            <field name="code">VEH</field>
            <field name="depreciation_method">declining</field>
