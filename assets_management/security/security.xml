<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Management Groups -->
    <record id="module_category_asset_management" model="ir.module.category">
        <field name="name">Asset Management</field>
        <field name="description">Manage assets, depreciation, maintenance and repairs</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_asset_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_asset_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_asset_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_asset_management"/>
        <field name="implied_ids" eval="[(4, ref('group_asset_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="asset_comp_rule" model="ir.rule">
        <field name="name">Asset: multi-company</field>
        <field name="model_id" ref="model_asset_asset"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="asset_category_comp_rule" model="ir.rule">
        <field name="name">Asset Category: multi-company</field>
        <field name="model_id" ref="model_asset_category"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>