<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_document_movement_form" model="ir.ui.view">
        <field name="name">document.movement.form</field>
        <field name="model">document.movement</field>
        <field name="arch" type="xml">
            <form string="Document Movement">
                <header>
                    <button name="action_confirm_receipt" type="object" 
                            string="Confirm Receipt" class="btn-primary"
                            invisible="status != 'taken'"/>
                    <button name="action_return" type="object" 
                            string="Return Document"
                            invisible="status != 'received'"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="document_id"/>
                            <field name="document_type"/>
                            <field name="taken_date"/>
                            <field name="taken_by_id"/>
                        </group>
                        <group>
                            <field name="from_location_id"/>
                            <field name="to_location_id"/>
                            <field name="expected_return_date"/>
                            <field name="duration_hours" invisible="return_date == False"/>
                        </group>
                    </group>
                    <group string="Receipt Information" invisible="status == 'taken'">
                        <field name="received_by_id"/>
                        <field name="received_date"/>
                    </group>
                    <group string="Return Information" invisible="status != 'returned'">
                        <field name="return_date"/>
                    </group>
                    <group string="Details">
                        <field name="purpose" nolabel="1" placeholder="Purpose/Reason for movement..."/>
                        <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_document_movement_tree" model="ir.ui.view">
        <field name="name">document.movement.tree</field>
        <field name="model">document.movement</field>
        <field name="arch" type="xml">
            <tree string="Document Movements" 
                  decoration-warning="status == 'taken'"
                  decoration-success="status == 'received'"
                  decoration-info="status == 'returned'">
                <field name="taken_date"/>
                <field name="document_id"/>
                <field name="document_type"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <field name="taken_by_id"/>
                <field name="status" widget="badge"/>
                <field name="purpose"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_document_movement_search" model="ir.ui.view">
        <field name="name">document.movement.search</field>
        <field name="model">document.movement</field>
        <field name="arch" type="xml">
            <search>
                <field name="document_id"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <field name="taken_by_id"/>
                <filter string="Today" name="today" 
                        domain="[('taken_date', '>=', datetime.datetime.now().replace(hour=0,minute=0,second=0)),
                                ('taken_date', '&lt;=', datetime.datetime.now().replace(hour=23,minute=59,second=59))]"/>
                <filter string="Taken" name="taken" 
                        domain="[('status', '=', 'taken')]"/>
                <filter string="Received" name="received" 
                        domain="[('status', '=', 'received')]"/>
                <filter string="Returned" name="returned" 
                        domain="[('status', '=', 'returned')]"/>
                <separator/>
                <filter string="My Movements" name="my_movements" 
                        domain="[('taken_by_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Document" name="group_document" 
                            context="{'group_by': 'document_id'}"/>
                    <filter string="From Location" name="group_from" 
                            context="{'group_by': 'from_location_id'}"/>
                    <filter string="To Location" name="group_to" 
                            context="{'group_by': 'to_location_id'}"/>
                    <filter string="Status" name="group_status" 
                            context="{'group_by': 'status'}"/>
                    <filter string="Date" name="group_date" 
                            context="{'group_by': 'taken_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Calendar View -->
    <record id="view_document_movement_calendar" model="ir.ui.view">
        <field name="name">document.movement.calendar</field>
        <field name="model">document.movement</field>
        <field name="arch" type="xml">
            <calendar string="Document Movements" date_start="taken_date" 
                     date_stop="return_date" color="to_location_id">
                <field name="document_id"/>
                <field name="to_location_id"/>
            </calendar>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_document_movement" model="ir.actions.act_window">
        <field name="name">Document Movements</field>
        <field name="res_model">document.movement</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_document_movement_search"/>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>