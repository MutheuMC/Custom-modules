<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_document_movement_wizard_form" model="ir.ui.view">
        <field name="name">document.movement.wizard.form</field>
        <field name="model">document.movement.wizard</field>
        <field name="arch" type="xml">
            <form string="Move Document">
                <group>
                    <field name="document_id" readonly="1"/>
                    <field name="from_location_id" readonly="1"/>
                </group>
                <separator string="Movement Details"/>
                <group>
                    <group>
                        <field name="to_location_id" required="1"/>
                        <field name="taken_by_id" required="1"/>
                    </group>
                    <group>
                        <field name="expected_return_date"/>
                        <field name="send_notification"/>
                    </group>
                </group>
                <group string="Purpose">
                    <field name="purpose" nolabel="1" required="1" 
                           placeholder="Enter the reason for this document movement..."/>
                </group>
                <group string="Additional Notes">
                    <field name="notes" nolabel="1" 
                           placeholder="Any additional notes or instructions..."/>
                </group>
                <footer>
                    <button name="action_move_document" type="object" 
                            string="Move Document" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
