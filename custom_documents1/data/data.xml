<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Document Tags -->
        <record id="tag_important" model="custom.document.tag">
            <field name="name">Important</field>
            <field name="color">1</field>
        </record>
        
        <record id="tag_pending" model="custom.document.tag">
            <field name="name">Pending</field>
            <field name="color">2</field>
        </record>
        
        <record id="tag_reviewed" model="custom.document.tag">
            <field name="name">Reviewed</field>
            <field name="color">3</field>
        </record>
        
        <!-- Sample Folders Structure matching screenshots -->
        <record id="folder_hr" model="custom.document.folder">
            <field name="name">HR</field>
            <field name="color">4</field>
        </record>
        
        <record id="folder_employees" model="custom.document.folder">
            <field name="name">Employees</field>
            <field name="parent_id" ref="folder_hr"/>
            <field name="color">5</field>
        </record>
        
        <record id="folder_bbbbb" model="custom.document.folder">
            <field name="name">bbbbb</field>
            <field name="parent_id" ref="folder_employees"/>
            <field name="color">6</field>
        </record>
        
        <record id="folder_tttt" model="custom.document.folder">
            <field name="name">tttt</field>
            <field name="parent_id" ref="folder_bbbbb"/>
            <field name="color">7</field>
        </record>
        
        <record id="folder_test_test" model="custom.document.folder">
            <field name="name">test test</field>
            <field name="parent_id" ref="folder_bbbbb"/>
            <field name="color">8</field>
        </record>
        
        <record id="folder_projects" model="custom.document.folder">
            <field name="name">Projects</field>
            <field name="color">9</field>
        </record>
        
        <record id="folder_support" model="custom.document.folder">
            <field name="name">Support</field>
            <field name="color">10</field>
        </record>
        
        <!-- Sample URL Document (doesn't require a file) -->
        <record id="doc_sample_url" model="custom.document">
            <field name="name">Sample Document Link</field>
            <field name="document_type">url</field>
            <field name="folder_id" ref="folder_tttt"/>
            <field name="url">https://www.odoo.com/documentation/18.0/</field>
        </record>
    </data>
</odoo>