<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Form View -->
    <record id="view_custom_document_form" model="ir.ui.view">
        <field name="name">custom.document.form</field>
        <field name="model">custom.document</field>
        <field name="arch" type="xml">
            <form string="Document">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_download" type="object" 
                                class="oe_stat_button" icon="fa-download"
                                invisible="document_type not in ['file', 'url']">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Download</span>
                            </div>
                        </button>
                        <button name="action_lock" type="object" 
                                class="oe_stat_button" icon="fa-lock">
                            <field name="is_locked" invisible="1"/>
                            <div class="o_stat_info">
                                <span class="o_stat_text" invisible="is_locked">Lock</span>
                                <span class="o_stat_text" invisible="not is_locked">Unlock</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Locked" 
                            invisible="not is_locked"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_type" widget="radio"/>
                            <field name="folder_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="file" filename="file_name" 
                                   invisible="document_type != 'file'"/>
                            <field name="file_name" invisible="1"/>
                            <field name="url" widget="url" 
                                   invisible="document_type != 'url'"
                                   placeholder="https://example.com"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Add a description..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Document list View -->
    <record id="view_custom_document_list" model="ir.ui.view">
        <field name="name">custom.document.list</field>
        <field name="model">custom.document</field>
        <field name="arch" type="xml">
            <list string="Documents">
                <field name="name"/>
                <field name="document_type"/>
                <field name="folder_id"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="tag_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Document Kanban View -->
    <record id="view_custom_document_kanban" model="ir.ui.view">
        <field name="name">custom.document.kanban</field>
        <field name="model">custom.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" js_class="custom_document_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="document_type"/>
                <field name="folder_id"/>
                <field name="user_id"/>
                <field name="color"/>
                <field name="is_locked"/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="open" class="dropdown-item">Open</a>
                        <a role="menuitem" type="download" class="dropdown-item">Download</a>
                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" 
                                       data-bs-toggle="dropdown" href="#">
                                        <i class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a type="edit" class="dropdown-item">Edit</a>
                                        </t>
                                        <a type="delete" class="dropdown-item">Delete</a>
                                    </div>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.document_type.value == 'file'">
                                    <i class="fa fa-file-o"/> File
                                </div>
                                <div t-if="record.document_type.value == 'url'">
                                    <i class="fa fa-link"/> URL
                                </div>
                                <div t-if="record.folder_id.value">
                                    <i class="fa fa-folder-o"/> <field name="folder_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.is_locked.raw_value" 
                                          class="badge rounded-pill text-bg-warning">
                                        <i class="fa fa-lock"/> Locked
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Folder Form View -->
    <record id="view_custom_document_folder_form" model="ir.ui.view">
        <field name="name">custom.document.folder.form</field>
        <field name="model">custom.document.folder</field>
        <field name="arch" type="xml">
            <form string="Folder">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_documents" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="document_count" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Folder Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Folder list View -->
    <record id="view_custom_document_folder_list" model="ir.ui.view">
        <field name="name">custom.document.folder.list</field>
        <field name="model">custom.document.folder</field>
        <field name="arch" type="xml">
            <list string="Folders">
                <field name="complete_name"/>
                <field name="user_id"/>
                <field name="document_count"/>
            </list>
        </field>
    </record>

    <!-- Main Document Action -->
    <record id="action_custom_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">custom.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document
            </p>
            <p>
                Upload files or add URL links to organize your documents
            </p>
        </field>
    </record>

    <!-- Folder Action -->
    <record id="action_custom_document_folder" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="res_model">custom.document.folder</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>