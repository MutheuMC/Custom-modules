<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_document_tracking" model="ir.module.category">
        <field name="name">Document Tracking</field>
        <field name="description">Document Tracking System</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- User Groups -->
    <record id="group_document_user" model="res.groups">
        <field name="name">Document User</field>
        <field name="category_id" ref="module_category_document_tracking"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_document_officer" model="res.groups">
        <field name="name">Document Officer</field>
        <field name="category_id" ref="module_category_document_tracking"/>
        <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
    </record>
    
    <record id="group_document_manager" model="res.groups">
        <field name="name">Document Manager</field>
        <field name="category_id" ref="module_category_document_tracking"/>
        <field name="implied_ids" eval="[(4, ref('group_document_officer'))]"/>
    </record>
</odoo>