<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Movement Report -->
    <record id="report_document_movement" model="ir.actions.report">
        <field name="name">Document Movement Report</field>
        <field name="model">document.tracker</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">document_tracking.report_document_movement_template</field>
        <field name="report_file">document_tracking.report_document_movement</field>
        <field name="print_report_name">'Movement Report - ' + object.name</field>
        <field name="binding_model_id" ref="model_document_tracker"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- Report Template -->
    <template id="report_document_movement_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Document Movement Report</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Document Number:</strong> <span t-field="doc.name"/><br/>
                                <strong>Document Type:</strong> <span t-field="doc.document_type"/><br/>
                                <strong>Title:</strong> <span t-field="doc.title"/><br/>
                            </div>
                            <div class="col-6">
                                <strong>Current Location:</strong> <span t-field="doc.current_location_id"/><br/>
                                <strong>Current Status:</strong> <span t-field="doc.status"/><br/>
                                <strong>Created Date:</strong> <span t-field="doc.date_created"/><br/>
                            </div>
                        </div>
                        
                        <h3 class="mt-4">Movement History</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Taken By</th>
                                    <th>Purpose</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.movement_ids" t-as="movement">
                                    <tr>
                                        <td><span t-field="movement.taken_date"/></td>
                                        <td><span t-field="movement.from_location_id"/></td>
                                        <td><span t-field="movement.to_location_id"/></td>
                                        <td><span t-field="movement.taken_by_id"/></td>
                                        <td><span t-field="movement.purpose"/></td>
                                        <td><span t-field="movement.status"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>